<Window x:Class="Notatnik.WindowUserColor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notatnik"
        mc:Ignorable="d"
        Title="Kolor urzytkownika" Height="350" Width="600">
    <UniformGrid Columns="2">
        <Label>R:</Label>
        <TextBox x:Name="TextBox_R"/>
        <Label>G:</Label>
        <TextBox x:Name="TextBox_G"/>
        <Label>B:</Label>
        <TextBox x:Name="TextBox_B"/>
        <Button Click="Button_Click_Confirm">Zatwierdź kolor</Button>
    </UniformGrid>
</Window>
